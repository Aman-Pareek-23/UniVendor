<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
<link rel="stylesheet" href="/css/user_sign_up.css">


<form class="detail flex " action="/users/createPost" method="POST" enctype="multipart/form-data">
    <label for="basic-url" class="form-label my-1">Product Details</label>
    <div class="row my-4">
        <div class="col">
            <input type="text" name="product_name" class="form-control" placeholder="Product name"
                aria-label="product_name">
        </div>
    </div>

    <div class="input-group mb-3 my-4">
        <span class="input-group-text" id="basic-addon2">Product Type</span>
        <!-- <input type="test" name="product_type" class="form-control" placeholder="Enter your product type"
            aria-label="product_type" aria-describedby="basic-addon2"> -->

            <select name="product_type">
                <% var options = ["books","electronics","others"]; %>
                <% for(var i = 0; i < 3; i++) { %>
                  <option value='<%= options[i] %>'><%= options[i] %></option>
                <% } %>
              </select>
    </div>

    
    <div class="input-group mb-3 my-4">
        <span class="input-group-text" id="basic-addon3">Product Price</span>
        <input type="text" name="product_price" class="form-control" id="basic-url" aria-describedby="basic-addon3">
    </div>

    <div class="file-field input-field">
        <div class="btn grey">
            <span>File</span>
            <input name="product_img" type="file" multiple>
        </div>
    </div>

    
    <button class="btn btn-secondary " type="submit">Submit</button>
</form>

<%- include('_footer'); %>